{
	"name": "nano-views-preact",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "tsx server.ts",
		"build": "npm run build:client && npm run build:server && npm run build:prepare-ssr",
		"build:client": "tsc && vite build",
		"build:server": "vite build --ssr src/entry-server.tsx --outDir dist/server",
		"build:prepare-ssr": "mkdir -p dist/ssr && cp dist/client/index.html dist/ssr/index.html && rm dist/client/index.html",
		"preview": "NODE_ENV=production tsx server.ts",
		"server": "tsx server.ts",
		"server:dev": "tsx watch server.ts",
		"clean": "rm -rf dist node_modules .turbo"
	},
	"dependencies": {
		"@hattip/adapter-node": "^0.0.49",
		"@hattip/core": "^0.0.49",
		"@hattip/router": "^0.0.49",
		"@hattip/static": "^0.0.49",
		"@hattip/vite": "^0.0.49",
		"@nanostores/react": "^1.0.0",
		"@nvr/preact": "workspace:*",
		"@preact/preset-vite": "^2.10.2",
		"@preact/signals": "^2.3.2",
		"@radix-ui/react-slot": "^1.2.3",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"nano-views-router": "workspace:*",
		"nanostores": "^1.0.1",
		"preact": "^10.27.2",
		"preact-render-to-string": "^6.6.2",
		"tailwind-merge": "^3.3.1",
		"tw-animate-css": "^1.4.0"
	},
	"devDependencies": {
		"@tailwindcss/vite": "4.1.15",
		"@types/node": "^24.9.0",
		"@vercel/node": "^5.4.1",
		"fast-glob": "^3.3.3",
		"prettier": "^3.6.2",
		"tailwindcss": "4.1.15",
		"tsx": "^4.20.6",
		"typescript": "~5.9.3",
		"vite": "npm:rolldown-vite@7.1.19"
	},
	"packageManager": "yarn@4.10.3",
	"volta": {
		"extends": "../package.json"
	}
}
